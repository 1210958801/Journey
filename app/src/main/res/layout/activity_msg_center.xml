<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.MsgCenterActivity">

    <com.qmuiteam.qmui.widget.QMUITopBar
        android:id="@+id/msgCenterTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:qmui_topbar_bg_color="@color/DeepSkyBlue" />

    <com.qmuiteam.qmui.widget.QMUITabSegment
        android:id="@+id/msgTab"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:qmui_tab_has_indicator="true"
        app:qmui_tab_indicator_height="2dp"
        app:qmui_tab_indicator_top="false" />

    <android.support.v4.view.ViewPager
        android:id="@+id/msgPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>